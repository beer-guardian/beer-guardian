<div class="main-layout">
  <div class="beer-cards">
    {{#if beers}}
      {{#each beers}}
        <div id="{{_id}}" class="card card-active js-tilt {{#unless labelUrl}}no-label{{/unless}}" {{#if labelUrl}}style="background-image: url({{labelUrl}})"{{/if}} data-id="{{_id}}" data-abv="{{abv}}" data-ibu="{{ibu}}" data-score="{{score}}">
          <div class="score"><span>{{score}}</span></div>
          <div class="top">
            <div class="title">{{name}}</div>
            <div class="meta">{{brewery}}</div>
          </div>
          <div class="col-wrapper bottom">
            <div class="col six vote vote-down"><img src="../res/thumbs-down.svg"></div>
            <div class="col six vote vote-up"><img src="../res/thumbs-up.svg"></div>
          </div>
          <p class="desc hidden">{{description}}</p>
        </div>
      {{/each}}
    {{/if}}
    {{#if user}}
      <div class="card card-add js-tilt">
        <img src="../res/plus.svg" class="abs-center">
      </div>
    {{else}}
      <a href="login" class="card card-add js-tilt">
        <img src="../res/plus.svg" class="abs-center">
      </a>
    {{/if}}
  </div>
</div>